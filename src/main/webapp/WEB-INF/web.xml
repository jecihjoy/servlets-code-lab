<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Java Web Development Code Labs</display-name>

    <!-- Filter -->

    <filter>
        <filter-name>LabsFilter</filter-name>
        <filter-class>org.apluscreators.servletlabs.servlets.LabsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LabsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Session Config -->

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>
