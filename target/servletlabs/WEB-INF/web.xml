<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Servlets Labs</display-name>

<!--  <context-param>-->
<!--    <param-name>base_url</param-name>-->
<!--    <param-value>/servletlabs/**</param-value>-->
<!--  </context-param>-->

  <!-- Servlets -->

  <servlet>
    <servlet-name>WelcomeServlet</servlet-name>
    <display-name>Welcome Servlet</display-name>
    <servlet-class>org.apluscreators.servletlabs.servlets.WelcomeServlet</servlet-class>

    <init-param>
      <param-name>user</param-name>
      <param-value>Admin Owino</param-value>
    </init-param>

  </servlet>


  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <display-name>Login</display-name>
    <servlet-class>org.apluscreators.servletlabs.servlets.LoginServlet</servlet-class>

    <init-param>
      <param-name>username</param-name>
      <param-value>Required</param-value>
    </init-param>

    <init-param>
      <param-name>password</param-name>
      <param-value>Not provided</param-value>
    </init-param>

  </servlet>

  <!-- Servlet Mappings -->

  <servlet-mapping>
    <servlet-name>WelcomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

</web-app>
